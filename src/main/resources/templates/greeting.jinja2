{% extends "base.jinja2" %}

{% block title %}
    Приветствие
{% endblock %}

{% block content %}
    <h3 class="h3 text-info text-center form-title">Приветствие</h3>
    <div class="center-div p-3 mt-3 mx-auto text-center">
        <form method="post" class="form-control border-0">
            <label>
                Введите имя:
                <input class="form-text" type="text" name="username">
            </label>
            <button class="btn btn-outline-info" type="submit">Отправить</button>
        </form>
        <p id="greeting" class="mt-3">Привет, {{ username }}!</p>
    </div>
{% endblock %}
